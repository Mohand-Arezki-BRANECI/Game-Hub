<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #212121;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamehub.LoginController">
   <children>
      <Label layoutX="143.0" layoutY="123.0" prefHeight="53.0" prefWidth="118.0" text="Login" textFill="WHITE">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label layoutX="125.0" layoutY="208.0" text="Email" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="127.0" layoutY="255.0" prefHeight="27.0" prefWidth="82.0" text="Password" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField id="email" fx:id="email" layoutX="288.0" layoutY="209.0" prefHeight="25.0" prefWidth="158.0" promptText="Your email address" />
      <PasswordField id="password" fx:id="password" layoutX="288.0" layoutY="256.0" prefHeight="25.0" prefWidth="158.0" promptText="Your password" />
      <Label layoutX="74.0" layoutY="48.0" text="Wellcome to your favorite gaming place" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label layoutX="131.0" layoutY="350.0" text="Don't have an account?" textFill="WHITE" />
      <Button fx:id="signUpBtn" layoutX="288.0" layoutY="346.0" mnemonicParsing="false" onAction="#switchToSignUpScene" text="Sign up" />
      <Button fx:id="loginBtn" layoutX="128.0" layoutY="300.0" mnemonicParsing="false" onAction="#handleLoginBtn" prefHeight="25.0" prefWidth="320.0" text="Log in" />
      <MenuBar prefHeight="27.0" prefWidth="600.0">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="quitGameHub" mnemonicParsing="false" text="Quit" onAction="#handleQuitGameHub" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </children>
</AnchorPane>
