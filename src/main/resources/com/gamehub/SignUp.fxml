<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #212121;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamehub.SignUpController">
   <children>
      <MenuBar prefHeight="27.0" prefWidth="600.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="quitGameHub" mnemonicParsing="false" onAction="#handleQuitGameHub" text="Quit" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label layoutX="74.0" layoutY="48.0" text="Create an account to start playing !" textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label layoutX="143.0" layoutY="123.0" prefHeight="53.0" prefWidth="135.0" text="Sign Up" textFill="WHITE">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label layoutX="116.0" layoutY="208.0" text="Email" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="116.0" layoutY="287.0" prefHeight="27.0" prefWidth="82.0" text="Password" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="email" layoutX="288.0" layoutY="209.0" prefHeight="25.0" prefWidth="158.0" promptText="Your email address" />
      <PasswordField fx:id="password" layoutX="288.0" layoutY="288.0" prefHeight="25.0" prefWidth="158.0" promptText="Your password" />
      <Label layoutX="116.0" layoutY="323.0" text="Confirm Password" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <PasswordField fx:id="cpassword" layoutX="288.0" layoutY="325.0" prefHeight="25.0" prefWidth="158.0" promptText="Confirm your password" />
      <Label layoutX="121.0" layoutY="412.0" text="Already have an account?" textFill="WHITE" />
      <Button fx:id="loginBtn" layoutX="288.0" layoutY="408.0" mnemonicParsing="false" onAction="#switchToLoginScene" text="Log in" />
      <Button fx:id="createAccountBtn" layoutX="115.0" layoutY="367.0" mnemonicParsing="false" onAction="#handleCreateAccountBtn" prefHeight="25.0" prefWidth="334.0" text="Create account" />
      <Label layoutX="116.0" layoutY="249.0" prefHeight="27.0" prefWidth="82.0" text="Pseudo" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="pseudo" layoutX="288.0" layoutY="249.0" prefHeight="25.0" prefWidth="158.0" promptText="Your pseudo" />

   </children>
</AnchorPane>
